<?xml version="1.0" encoding="UTF-8"?>
<com.thoughtworks.wechat.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_layout_height"
    android:clipToPadding="false"
    android:scrollY="@dimen/header_layout_scrollY">

    <com.thoughtworks.wechat.scaleview.ScaleImageView
        android:id="@+id/theme_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/header_theme_image_margin_bottom"
        android:scaleType="fitXY"
        android:src="@drawable/header_bg"/>

    <com.thoughtworks.wechat.scaleview.ScaleImageView
        android:id="@+id/progress_image"
        android:layout_width="@dimen/header_progress_image_size"
        android:layout_height="@dimen/header_progress_image_size"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/header_progress_image_margin_left"
        android:scaleType="fitXY"
        android:src="@drawable/progress"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">
        <com.thoughtworks.wechat.scaleview.ScaleTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/header_user_name_margin_right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_user_name_text_size"/>

        <com.thoughtworks.wechat.scaleview.ScaleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/header_user_icon_size"
            android:layout_height="@dimen/header_user_icon_size"
            android:layout_marginRight="@dimen/header_user_icon_margin_right"
            android:scaleType="fitXY"
            android:src="@drawable/default_share_image"/>
    </LinearLayout>

</com.thoughtworks.wechat.scaleview.ScaleRelativeLayout>